<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".IndexActivity">

    <ImageButton
        android:id="@+id/TableButton"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/tablebutton"
        android:layout_marginLeft="740dp"
        android:layout_marginTop="130dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="量表测评"
        android:textColor="#ffffff"
        android:textSize="45dp"
        android:layout_marginLeft="825dp"
        android:layout_marginTop="180dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="语言障碍程度评估"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_marginLeft="820dp"
        android:layout_marginTop="248dp"/>

    <ImageButton
        android:id="@+id/GameButton"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/gamebutton"
        android:layout_marginLeft="740dp"
        android:layout_marginTop="365dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="语言游戏"
        android:textColor="#ffffff"
        android:textSize="45dp"
        android:layout_marginLeft="825dp"
        android:layout_marginTop="415dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帮助儿童提升语言能力"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_marginLeft="799dp"
        android:layout_marginTop="483dp"/>

    <ImageButton
        android:id="@+id/MainVoiceButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="1090dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/open_main_voice" />



</RelativeLayout>
